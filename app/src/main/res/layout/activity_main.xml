<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="2">
    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/from_unit_textView"
            android:layout_width="176dp"
            android:layout_height="75dp"
            android:text="" />

        <EditText
            android:id="@+id/from_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="96dp"
            android:hint="from" />

        <TextView
            android:id="@+id/from_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From" />
        <RadioGroup
            android:id="@+id/from_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/metre_from_radioButton">
            <RadioButton
                android:id="@+id/metre_from_radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metre" />

            <RadioButton
                android:id="@+id/millimetre_from_radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Millimetre" />

            <RadioButton
                android:id="@+id/mile_from_radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mile" />

            <RadioButton
                android:id="@+id/foot_from_radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foot" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/to_unit_textView"
            android:layout_width="176dp"
            android:layout_height="75dp"
            android:text="" />

        <EditText
            android:id="@+id/to_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="96dp"
            android:hint="to" />
        <TextView
            android:id="@+id/to_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To" />
        <RadioGroup
            android:id="@+id/to_radioGroup"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/metre_to_radioButton">

            <RadioButton
                android:id="@+id/metre_to_radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metre" />

            <RadioButton
                android:id="@+id/millimetre_to_radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Millimetre" />

            <RadioButton
                android:id="@+id/mile_to_radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mile" />

            <RadioButton
                android:id="@+id/foot_to_radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foot" />
        </RadioGroup>
    </LinearLayout>
        <Button
            android:id="@+id/convert_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert" />
    </GridLayout>





</LinearLayout>